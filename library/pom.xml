<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <artifactId>library-root</artifactId>
        <groupId>com.testing.maven.poms</groupId>
        <version>0.0.14</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.testing.maven.poms.library</groupId>
    <artifactId>library</artifactId>
    <packaging>pom</packaging>
    <version>0.0.14</version>

    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.3.2</version>
                <executions>
                    
                    <!-- USAGE: mvn clean -->
                    <execution>
                        <id>exec-clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>./clean.sh</executable>
                        </configuration>
                    </execution>
                    
                    <!-- USAGE: mvn package -->
                    <execution>
                        <id>exec-package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>./package.sh</executable>
                        </configuration>
                    </execution>

                    <!-- USAGE: mvn deploy -->
                    <execution>
                        <id>exec-deploy</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>./deploy.sh</executable>
                            <arguments>
                                <argument>${version}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    
                    <!-- USAGE: mvn release:clean release:prepare release:perform -->
                    <execution>
                        <id>exec-release</id>
                        <phase>release:perform</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <addSchema>false</addSchema>
                            <dryRun>false</dryRun>
                            <pushChanges>true</pushChanges>
                            <remoteTagging>true</remoteTagging>
                            <updateDependencies>true</updateDependencies>
                            <updateWorkingCopyVersions>true</updateWorkingCopyVersions>
                            <executable>./release.sh</executable>
                            <systemProperties>
                                <systemProperty>
                                    <key>EXECUTING_A_RELEASE</key>
                                    <value>true</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </execution>
                  
                </executions>
            </plugin>

        </plugins>
    </build>

</project>